<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_marginBottom"

        android:gravity="center_vertical"
        android:text="เลือกขนาด"
        android:textColor="@color/black"
        android:textSize="@dimen/text_body_big"

        android:background="@color/light_pink"
        android:paddingLeft="10dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@color/white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/imageView7"
                    android:src="@drawable/krasop"
                    android:paddingTop="50dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="กระสอบ (30 ก.ก.)"
                    android:id="@+id/textView8"
                    android:textSize="@dimen/text_body_choice"
                    android:textColor="@color/dark_blue"
                    android:gravity="clip_vertical|center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_column="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:id="@+id/imageView8"
                    android:src="@drawable/krasop"
                    android:paddingTop="25dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="กระสอบ (50 ก.ก.)"
                    android:id="@+id/textView9"
                    android:textSize="@dimen/text_body_choice"
                    android:textColor="@color/dark_blue"
                    android:gravity="clip_vertical|center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_column="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/krasop"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="กระสอบ (100 ก.ก.)"
                    android:textSize="@dimen/text_body_choice"
                    android:textColor="@color/dark_blue"
                    android:gravity="clip_vertical|center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_column="3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/imageView10"
                    android:src="@drawable/plus"
                    android:padding="30dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="อื่นๆ"
                    android:id="@+id/textView11"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/text_body_choice"
                    android:gravity="clip_vertical|center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_marginBottom"
        android:layout_marginTop="@dimen/layout_marginTop"
        android:gravity="center_vertical"
        android:text="จำนวน"
        android:textColor="@color/black"
        android:textSize="@dimen/text_body_big"
        android:id="@+id/textView12"
        android:background="@color/light_pink"
        android:paddingLeft="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.16"
        android:gravity="center"
        android:weightSum="1">

        <EditText
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/rice_quantity"
            android:layout_gravity="center"
            android:textSize="@dimen/text_body"
            android:layout_weight="0.07"
            android:numeric="decimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="กระสอบ"
            android:id="@+id/textView13"
            android:layout_gravity="center"
            android:textSize="@dimen/text_body_answer"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/weight_layout"
        android:layout_weight="0.30">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/layout_marginBottom"
            android:layout_marginTop="@dimen/layout_marginTop"
            android:gravity="center_vertical"
            android:text="น้ำหนัก"
            android:textColor="@color/black"
            android:textSize="@dimen/text_body_big"
            android:background="@color/light_pink"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/weight_sumary"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView20" />
    </LinearLayout>


</LinearLayout>